<?xml version="1.0" encoding="utf-8" ?>
<y:BaseControl xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:y="clr-namespace:MobileDataKit_Collect.EntryControls"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDataKit_Collect.EntryControls.TextBoxView">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="12"
                                 AbsoluteLayout.LayoutFlags="PositionProportional"
                                 AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">
            <Label x:Name="lblText" FontSize="Large" FontAttributes="Bold" LineBreakMode="WordWrap" Text="Welcome to Xamarin Forms!" />
            <Entry x:Name="txtEntry"  HorizontalOptions="FillAndExpand"></Entry>
          <Label x:Name="lblError"   LineBreakMode="WordWrap" Text="Welcome to Xamarin Forms!" />


        </StackLayout>
    </ContentPage.Content>
</y:BaseControl>